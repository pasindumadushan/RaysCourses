<script>
    $(document).ready(function () {
        $("#LogOut").click(function () {
            logOut();
        });
        validateCreate();
    });

    function validateCreate() {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("checkDate", function (value, element, param) {
                return checkDate(value);
            }, $.validator.format("Please enter exactly {0} characters."));

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));
            $("#UniversityForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    UniName: {
                        required: true
                    },
                    UniAddr: {
                        required: true
                    },
                    UniPnum: {
                        required: true,
                        number: true
                    }
                },
                messages: {
                    UniName: {
                        required: "Please fill this field!"
                    },
                    UniAddr: {
                        required: "Please fill this field!"
                    },
                    UniPnum: {
                        required: "Please fill this field!",
                        number: "Invalid Number!"
                    }
                },
                submitHandler: function (form) {
                    Create();
                }

            });
        });
    }

    function Create() {

        var university = serializeFormJson($('#UniversityForm').serializeArray())
        $.ajax({
            type: "POST",
            url: '@Url.Action("Create", "University")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            data:{
                university: university
            },
            success: function (data) {

                if (data.success == true)
                {
                    var url = '@Url.Action("Index","University")';
                    window.location.href = url;
                }
                else
                {
                    alert("Creation fail!");
                }

            }
        });
    }

    function logOut() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("logOut", "User")',
            dataType: "json",
            success: function (data) {

                if (data.success = true) {
                    var url = '@Url.Action("LoginView", "User")';
                    window.location.href = url;
                }

            },

            failure: function (data) {
                console.log("failure");
            },

            error: function (data) {
                console.log("error");
            }

        });
    }

    function serializeFormJson(formArray) {
        var returnArray = {};
        for (var i = 0; i < formArray.length; i++) {
            returnArray[formArray[i]['name']] = formArray[i]['value'];
        }
        return returnArray;
    }
</script>
